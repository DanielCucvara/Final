<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/recyclerView_layout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:id="@+id/image"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/recyclerView_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:layout_toRightOf="@id/image"
        android:text="Start"
        android:textColor="#000"
        android:textSize="17sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sipka"
        android:layout_toRightOf="@+id/recyclerView_start"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/recyclerView_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_toRightOf="@id/recyclerView_start"
        android:text="Destination"
        android:textColor="#000"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/date_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_date"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="37dp"
        android:layout_below="@+id/recyclerView_start"
        android:layout_marginTop="14dp"
        />

    <TextView
        android:id="@+id/recyclerView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerView_start"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@id/date_image"
        android:text="Date"
        android:textColor="#000"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/time_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_time"
        android:layout_toRightOf="@id/image"
        android:layout_marginLeft="37dp"
        android:layout_below="@id/recyclerView_date"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/recyclerView_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerView_date"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/time_image"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:textSize="15sp"
        android:text="Time" />

    <ImageView
        android:id="@+id/seats_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerView_start"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="160dp"
        android:layout_toRightOf="@+id/image"
        android:src="@drawable/ic_seats" />

    <TextView
        android:id="@+id/recyclerView_seats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerView_start"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/seats_image"
        android:textColor="#000"
        android:textSize="15sp"
        android:text="Seats" />

</RelativeLayout>